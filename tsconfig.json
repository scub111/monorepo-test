{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "*": [
        "types/*"
      ],
      "common/*": [
        "./src/common/*"
      ],
      "server/*": [
        "./src/server/*"
      ],
      "client/*": [
        "./src/client/*"
      ],
      "codegen/*": [
        "./src/codegen/*"
      ],
    }
  }
}